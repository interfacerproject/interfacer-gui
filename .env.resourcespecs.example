# Environment Variables for ResourceSpec IDs
# Copy to .env.local and replace placeholder values with actual ULIDs from backend

# DPP (Digital Product Passport) ResourceSpecification ID
# Query backend for actual ID or ask backend team
NEXT_PUBLIC_SPEC_DPP=SPEC_DPP_PLACEHOLDER

# Machine ResourceSpecification IDs
# Each machine type needs its own ResourceSpec in the backend
NEXT_PUBLIC_SPEC_MACHINE_LASER_CUTTER=SPEC_MACHINE_LASER_CUTTER_PLACEHOLDER
NEXT_PUBLIC_SPEC_MACHINE_3D_PRINTER=SPEC_MACHINE_3D_PRINTER_PLACEHOLDER
NEXT_PUBLIC_SPEC_MACHINE_CNC_MILL=SPEC_MACHINE_CNC_MILL_PLACEHOLDER
NEXT_PUBLIC_SPEC_MACHINE_SOLDER_STATION=SPEC_MACHINE_SOLDER_STATION_PLACEHOLDER
NEXT_PUBLIC_SPEC_MACHINE_PCB_MILL=SPEC_MACHINE_PCB_MILL_PLACEHOLDER
NEXT_PUBLIC_SPEC_MACHINE_VINYL_CUTTER=SPEC_MACHINE_VINYL_CUTTER_PLACEHOLDER
NEXT_PUBLIC_SPEC_MACHINE_REFLOW_OVEN=SPEC_MACHINE_REFLOW_OVEN_PLACEHOLDER

# How to get actual IDs:
# 1. Ask backend team for ResourceSpecification ULIDs
# 2. Query GraphQL endpoint:
#    query {
#      resourceSpecifications {
#        edges {
#          node {
#            id
#            name
